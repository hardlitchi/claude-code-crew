# Port for the application (default: 3001)
PORT=3001

# Working directory inside container (default: /app/workspace)
WORK_DIR=/app/workspace

# Host directory to mount as workspace (default: ./workspace)
HOST_WORK_DIR=./workspace

# User ID for file permissions (default: 1000)
USER_ID=1000

# Group ID for file permissions (default: 1000)
GROUP_ID=1000

# Additional arguments for Claude Code sessions
CC_CLAUDE_ARGS=